<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 150), micropost.user, id:"gravFeed"%>
  <span class="user"><%= link_to micropost.user.name, micropost.user, id:"gravName"%></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
    </span>

  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.

      <% if current_user?(micropost.user) %>

      <button class="deleteBtn"  id="<%= micropost.id %>">
      <div class="icon">
        <i class="fas fa-trash-alt"></i>
        <i class="fas fa-question"></i>
        <i class="fas fa-check"></i>
      </div>
      <div class="text">
        <span id="spanDelete-<%= micropost.id %>">Delete</span>
      </div>
    </button>
</span>
      <div style="display: none" id="link-<%= micropost.id %>">
        <%= link_to "delete", micropost, method: :delete, id:"linkDelete"%>
      </div>
    <% end %>
</li>
