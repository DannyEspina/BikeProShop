
    <!-- The Modal -->
  <div id="loginModal">

  <!-- Modal content -->
  <div class="modal-content">

  <%= form_for :session, url: login_path, :html =>{ id: "loginForm" } do |f| %>
  <div id="logintop">
    <!-- The Close Button -->
  <span class="closeLogin">&times;</span>
    <%= image_tag("Home/BPS_Symbol.png", alt:"logo", class:"loginImg1") %>
  </div>
  <input class="input" id="session_email" placeholder="Email"
         name="session[email]" type="text" required=""/>
  <input class="input" id="session_password" name="session[password]" placeholder="Password"
         type="password" required=""/>
    <%= link_to "Forgot password?", new_password_reset_path, id:"forgotPass" %>

  <button id="loginSumbit">Submit</button>

  <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
  <% end %>


  </div>

</div>
