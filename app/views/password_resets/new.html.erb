<% provide(:title, "Forgot password") %>

<div class ="container-fluid fix-contain forgotForm">
  <%= render 'shared/navbar' %>
  <%= render 'shared/flash' %>
  <%= image_tag("Users/forgotPass.png", alt:"forgot password", class:"forgotTitle") %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>

        <%= f.label :email do%>
            <%= f.email_field :email %>
            <div class="label-text">Email</div>
        <%end%>

        <%= f.submit "Submit", class: "sumbit" %>
      <% end %>
    </div>
  </div>
</div>
