$(".deleteBtn").click(function(e){
    var id = this.id;
    if($(this).hasClass("confirm")){
        $(this).addClass("done");

        $("#spanDelete-" + id).text("Deleted");
        $("#link-"+id + " #linkDelete").click();

    } else {
        $(this).addClass("confirm");
        $("#spanDelete-" + id).text("Are you sure?");
    }
});

// Reset
$(".deleteBtn").on('mouseout', function(){
    if($(this).hasClass("confirm") || $(this).hasClass("done")){
        setTimeout(function(){
            $("button").removeClass("confirm").removeClass("done");
            $("#spanDelete-" + id).text("Delete");
        }, 3000);
    }
});

});
